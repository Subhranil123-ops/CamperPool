<%layout("layouts/boilerplate")%>
<form action="/auth/register" method="post" class="row g-3 mt-5 needs-validation" novalidate>
    <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" class="form-control" placeholder="Enter your username" name="username" required>
    </div>
    <div class="mb-3">
    <label for="hostel" class="form-label">Hostel</label>
    <input type="text" id="hostel" class="form-control" placeholder="Enter your Hostel" name="hostel" required>
    </div>
    <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" id="password" class="form-control" placeholder="password" name="password" required>
    </div>
    <button class="btn btn-success">Submit</button>
</form>
